<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                             xmlns:app="http://schemas.android.com/apk/res-auto"
                                             xmlns:tools="http://schemas.android.com/tools"
                                             xmlns:grid="http://schemas.android.com/apk/res-auto"
                                             android:layout_width="match_parent"
                                             android:layout_height="match_parent">
    <TextView
            android:id="@+id/helloTextView"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="24sp" android:textAllCaps="true"/>
    <Button
            android:text="Reserve a book"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/reserveButton" android:layout_marginTop="36dp"
            app:layout_constraintTop_toBottomOf="@+id/helloTextView" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="28dp" android:layout_marginRight="28dp"/>
    <Button
            android:text="Return a book"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/returnButton" android:layout_marginTop="12dp"
            app:layout_constraintTop_toBottomOf="@+id/reserveButton" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="28dp" android:layout_marginRight="28dp"/>
    <Button
            android:text="a book"
            android:layout_width="185dp"
            android:layout_height="45dp"
            tools:layout_editor_absoluteX="16dp" android:layout_marginTop="36dp"
            app:layout_constraintTop_toBottomOf="@+id/helloTextView" android:id="@+id/button7"/>
    <Button
            android:text="a book"
            android:layout_width="185dp"
            android:layout_height="46dp"
            tools:layout_editor_absoluteX="16dp" android:id="@+id/button11" android:layout_marginTop="12dp"
            app:layout_constraintTop_toBottomOf="@+id/button7"/>
    <Button
            android:text="a book"
            android:layout_width="185dp"
            android:layout_height="wrap_content"
            tools:layout_editor_absoluteX="16dp" android:id="@+id/button12" android:layout_marginTop="4dp"
            app:layout_constraintTop_toBottomOf="@+id/button11"/>
    <Button
            android:text="a book"
            android:layout_width="185dp"
            android:layout_height="wrap_content"
            tools:layout_editor_absoluteX="16dp" android:id="@+id/button13" android:layout_marginTop="12dp"
            app:layout_constraintTop_toBottomOf="@+id/button12"/>
    <TextView
            android:text="My reservations"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:layout_editor_absoluteX="56dp" android:id="@+id/textView3" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/helloTextView"/>
    <Button
            android:text="Cancel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:layout_editor_absoluteX="147dp" android:id="@+id/cancelButton" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent"/>


</android.support.constraint.ConstraintLayout>